  <div id="userMealInput">  
    <h2 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; text-align:center">Enter Your Preferences</h1>
  
    <!-- <div class="row "> -->
     <form action="/meal_database"  method="post">
      <div class="form-group ">
      <select id="dietDropDown" name = "dietType" class="form-control " >
        <option>Diet Type</option>
        <option >Vegetarian</option>
        <option >Western</option>
        <option >Vegan</option>
        <option >Paleo</option>
        <option >Keto</option>
        <option >Mediterranean</option>
        <option >Raw</option>
      </select>
    </div>
  
    <div class="form-group">
      <input  name="userCalories" class="form-control" id="userCalories" placeholder="Enter: Target Calories">
    </div>
    <div class="form-group">
      <input  name="exclude" class="form-control" id="exclude" placeholder="Exclude: separate items with comma">
    </div>
    <button type="submit" onclick = "display()"class="btn btn-success">Generate Meals</button>
    </form>
 
  <!-- </div> -->
  
