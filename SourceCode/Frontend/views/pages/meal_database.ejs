<div class="bottom">
  <h1 style="font-style:italic; font-size:25px; padding-top:2rem;"> Watch the magic happen....</h1>
  <h2 style= "color: #DC143C;" id="diettype">Diet Type: <%-diet%></h2>
  <h2 style= "color: #DC143C;" id="calories">Target Calories: <%-calories%></h2>
  <h2 style= "color: #DC143C;" id="calories">Excluding: <%-excluded%></h2>
<div class="mealcards">
  
<div class="card-columns col-lg">
  <%
    if (items) {
      var cards = '';
      //var calories = if(calories) ? calories: "Not found";
      //var protein = if(protein) ? protein: "Not found"
      //var fat = if(fat) ? fat: "Not found"
      //var carbs = if(carbs) ? carbs: "Not found"
      //<!-- Iterate the items object & update the cards variable -->
      items.forEach(function(item) {  //making a card for each movie that was returned by the API call
        cards += 
  
        '<div class="card" style="width: 18rem;"><div class="card-body"><h4 class="card-title">' 
          + item.title + 
          '</h4><p>Calories: '+ calories + 
            ':</p><p>Protien: '+protein+'</p><p>Fat: '+fat+'</p><p>Carbs: '+carbs+'</p><a href="'+item.sourceUrl+'" target="_blank">Recipe</a></div></div>'
        
      }); %>
      <%- cards %>
  <% } %>
  </div>
  
</div>
